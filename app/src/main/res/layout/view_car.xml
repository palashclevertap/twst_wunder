<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <com.clevertap.wuunder_android_test.ui.views.AppTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/car_name_text_view"
            android:text="Car Name"
            android:singleLine="true"
            android:layout_marginBottom="2dp"
            />


       <com.clevertap.wuunder_android_test.ui.views.AppTextViewRegular
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/address_text_view"
           android:singleLine="true"
           android:text="Address"
           android:layout_marginBottom="2dp"/>

    <com.clevertap.wuunder_android_test.ui.views.AppTextViewRegular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/engineType_text_view"
        android:text="EngineType"
        android:singleLine="true"
        android:layout_marginBottom="2dp"/>

    <com.clevertap.wuunder_android_test.ui.views.AppTextViewRegular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exterior_text_view"
        android:text="exterior"
        android:singleLine="true"
        android:layout_marginBottom="2dp"/>

    <com.clevertap.wuunder_android_test.ui.views.AppTextViewRegular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/interior_text_view"
        android:text="Interior"
        android:singleLine="true"
        android:layout_marginBottom="2dp"/>

    <com.clevertap.wuunder_android_test.ui.views.AppTextViewRegular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vin_text_view"
        android:text="Vin"
        android:singleLine="true"
        android:layout_marginBottom="2dp"/>


    <com.clevertap.wuunder_android_test.ui.views.AppTextViewRegular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fuel_text_view"
        android:text="Fuel"
        android:singleLine="true"
        android:layout_marginBottom="2dp"/>

    <com.clevertap.wuunder_android_test.ui.views.AppTextViewRegular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/coordinates_text_view"
        android:text="Coordinates"
        android:singleLine="true"
        android:layout_marginBottom="2dp"/>


</LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>